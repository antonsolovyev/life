<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_OVERRIDE"/>
        <property name="location" value="classpath:application.properties"/>
    </bean>

    <bean id="lifeResource" class="com.solovyev.games.life.rest.LifeResource">
        <constructor-arg index="0" ref="patternDao"/>
        <constructor-arg index="1" value="${boardWidth}"/>
        <constructor-arg index="2" value="${boardHeight}"/>
        <constructor-arg index="3" value="${timerTick}"/>
    </bean>

    <bean id="patternDao" class="com.solovyev.games.life.dao.InMemoryPatternDao"/>
</beans>
